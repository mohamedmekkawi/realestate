{% block title %}Delete product{% endblock %}

{% block content %}

    <p> Are you sure you want to delete this product?</p>
    <form style="display: inline-block" action="/admin/product/list">
        <input type="submit" value="Cancel"></form>
    <form style="display: inline-block" method="post">
        <input type="hidden" name="delete" value="confirmed">
        <input type="submit" value="Yes, delete"></form>
    <p>{{p.name}} : {{p.description}} priced at {{p.price}}
        <img src="/{{p.imagePath}}" width="40"></p>
            
    
    
{% endblock content %}